/* pages/glossary/glossary.wxss */
.container {
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
}

.toolbar {
  width: 100vw;
}

.glossary-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 20rpx var(--inset) 0 var(--inset);
  background-color: white;
  overflow: hidden;
}

.header {
  margin-top: 35rpx;
}

.title {
  font-weight: bold;
  font-size: 22pt;
  line-height: 30pt;
  color: #000000;
}

.subtitle {
  font-weight: 400;
  font-size: 12pt;
  line-height: 15pt;
  color: #c7c4c4;
}

.main {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-top: 85rpx;
  overflow: auto;
}

.glossary-search-container {
  display: flex;
  align-items: center;
  height: 90rpx;
  background: #F9F9F9;
  border-radius: 45rpx;
  padding: 0 16px;
}

.glossary-search-icon {
  width: 50rpx;
  height: 50rpx;
}

.glossary-search-input {
  flex: 1;
  margin-left: 15rpx;
}

.input-placeholder {
  color: #b7b2b2;
  font-size: 11pt;
}

.cuIcon-roundclosefill {
  margin: 10rpx;
}

.glossary-list {
  flex: 1;
  padding-top: 45rpx;
  overflow: auto;
}

.glossary-suggestion {
  text-align: center;
}

.suggest-text {
  color: #A6A6A6;
}

.propose-suggest {
  color: #7240B1;
  margin-left: 5rpx;
  text-decoration: underline;
}

.reserved-space {
  height: 100rpx;
}

/* Suggest detail */
.modal-main {
  padding: 48rpx;
  border-radius: 32rpx;
  text-align: start;
  background: white;
}

.action {
  text-align: right;
  line-height: 30rpx;
}

.modal-dismiss-icon {
  font-size: 14pt;
}

.suggest-title {
  font-weight: bold;
  font-size: 38rpx;
  margin-top: -25rpx;
}

.suggest-subTitle {
  font-size: 25rpx;
  line-height: 30rpx;
  color: #E0BEBE;
}

.modal-btn {
  font-size: 13pt;
  font-weight: bold;
  color: white;
  border-radius: 16rpx;
  width: 100%;
  height: 90rpx;
  background: #B193F0;
}

.step-title {
  color: #6d6d6d;
}

.reset-z-index {
  z-index: 1;
}

.suggest-form {
  padding-bottom: 45rpx;
}

.form-item {
  margin-top: 40rpx;
  margin-bottom: 34rpx;
}

.form-title {
  font-weight: bold;
  line-height: 1rem;
  font-size: 28rpx;
  color: #1C1244;
}

.form-textarea {
  width: 100%;
  padding: 0px;
  line-height: 1rem;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.form-textarea-bottomLine {
  width: 100%;
  border-bottom: 1px solid #959DEA;
}

.hideLine {
  color: #B8B2B2;
  border: none;
}

.form-input-placeholder {
  font-size: 26rpx;
}

.glossary-item-frame {
  padding: 22rpx 33rpx;
  background: #F9F9F9;
  border-radius: 21rpx;
  margin-bottom: 24rpx;
}

.glossary-item-shimmer {
  display: flex;
  flex-direction: column;
}