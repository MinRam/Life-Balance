<toolbar isBack="{{true}}" bgColor="bg-white"></toolbar>


<view class="flex align-end justify-between">

  <view class="title margin-top-lg">食堂本周菜单</view>
  <view class="company">微软(中国)有限公司 - 苏州</view>
</view>

<view class="flex date-container">
  <view class="date">{{menu.startDateStr}}</view>
  <view class="margin-left margin-right">-</view>
  <view class="date">{{menu.endDateStr}}</view>
</view>

<view class="menu margin-top">
  <view class="special">本周特供: <text class="text-black text-bold">{{menu.special}}</text></view>

  <view style="height: 1rpx; background: #f1f1f1;" class="margin-top-sm"></view>
  <view class="margin-top">
    <rich-text nodes="{{menu.menuContent}}"></rich-text>
  </view>

  <view class="margin-top-sm">
    <view class="special">点击图片放大查看</view>

    <block wx:for="{{imgs}}" wx:key="" wx:for-item="item">
      <image show-menu-by-longpress="true" class='menu-img' mode="widthFix" src='{{item}}' bindtap='previewImage'
        data-src='{{item}}'>
      </image>
    </block>
  </view>
</view>